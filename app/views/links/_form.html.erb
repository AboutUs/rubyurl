<%= form_for @link, :as => :link, :url => {:controller => :links ,:action => 'create'}  do |f| %>
  <label for="link_website_url">Shorten a URL</label>
  <%= f.text_field :website_url %>

  
  <%= submit_tag 'Go!', :class => 'go' -%>

  <a href="#" class="customize">Customize URL</a>
  <div id="customize">
    <label>
      Custom slug<br />
      <%= f.text_field :token %>
    </label>
  </div>

<% end %>

